<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-purple-400"><%= @club.new_record? ? "Create New Club" : "Edit Club" %></h1>

  <%= form_with(model: @club, local: true, class: "bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>
    <% if @club.errors.any? %>
      <div class="bg-red-500 text-white px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Oops!</strong>
        <ul class="mt-2 list-disc list-inside">
          <% @club.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-300 text-sm font-bold mb-2" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.label :description, class: "block text-gray-300 text-sm font-bold mb-2" %>
      <%= f.text_area :description, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= f.label :current_book_id, "Current Book", class: "block text-gray-300 text-sm font-bold mb-2" %>
      <%= f.collection_select :current_book_id, Book.all, :id, :title, { include_blank: "Select a book" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit @club.new_record? ? "Create Club" : "Update Club", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Cancel", @club.new_record? ? clubs_path : club_path(@club), class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>