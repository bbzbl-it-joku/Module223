<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between">
    <%= link_to 'Back to Books', books_path, class: "mt-4 ml-4 bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
    <%= link_to 'Reviews', book_reviews_path(@book), class: "mt-4 mr-4 bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
  </div>
  <div class="border border-gray-200 p-4 m-4 rounded-lg shadow">
    <h1 class="font-bold text-4xl mb-6 text-center"><%= @book.title %></h1>
    <img src="<%= @book.cover_image %>" alt="<%= @book.title %>" class="mb-4 rounded-lg w-80 object-cover mx-auto">
    <p><strong>Author:</strong> <%= @book.author %></p>
    <p><strong>ISBN:</strong> <%= link_to @book.isbn, "https://isbnsearch.org/isbn/#{@book.isbn}", target: "_blank", class: "text-purple-600 underline" %></p>
    <p><strong>Publish Date:</strong> <%= @book.publish_date %></p>
    <div class="mt-4">
      <h2 class="font-bold text-2xl mb-2 text-white-700">Genres</h2>
      <% @book.genres.tr('[]', '').tr('\'', '').split(',').each do |genre| %>
        <%= link_to genre, books_path(search_by: "Genre", search_term: genre.strip), class: "inline-block bg-purple-800 text-white-600 text-xs px-2 rounded-full uppercase font-semibold tracking-wide transition duration-300 hover:bg-purple-600 mr-2" %>
      <% end %>
    </div>
    <div class="mt-4">
      <h2 class="font-bold text-2xl mb-2 text-white-700">Description</h2>
      <p><%= @book.description %></p>
    </div>
  </div>
</div>