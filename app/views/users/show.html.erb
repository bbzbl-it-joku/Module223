<div class="max-w-2xl mx-auto mt-8">
  <div class="bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold mb-4 text-center text-purple-400">User Profile</h2>
    <div class="mb-4">
      <strong class="block text-gray-300 text-sm font-bold mb-2">Username:</strong>
      <p class="text-gray-300"><%= @user.username %></p>
    </div>
    <div class="mb-4">
      <strong class="block text-gray-300 text-sm font-bold mb-2">Email:</strong>
      <p class="text-gray-300"><%= @user.email %></p>
    </div>
    <div class="flex items-center justify-between mt-6">
      <%= link_to "Edit Profile", edit_user_path(@user), class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
      <% if @user == current_user %>
        <%= link_to "Change Password", edit_password_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300" %>
      <% end %>
    </div>
  </div>
</div>
