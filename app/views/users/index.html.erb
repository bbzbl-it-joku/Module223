<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-purple-400">User Management</h1>

  <table class="w-full bg-gray-800 shadow-md rounded-lg overflow-hidden">
    <thead class="bg-gray-700">
      <tr>
        <th class="px-4 py-2 text-left text-gray-300">Username</th>
        <th class="px-4 py-2 text-left text-gray-300">Email</th>
        <th class="px-4 py-2 text-left text-gray-300">Role</th>
        <th class="px-4 py-2 text-left text-gray-300">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="border-t border-gray-700">
          <td class="px-4 py-2 text-gray-300"><%= user.username %></td>
          <td class="px-4 py-2 text-gray-300"><%= user.email %></td>
          <td class="px-4 py-2 text-gray-300"><%= user.role.capitalize %></td>
          <td class="px-4 py-2">
            <%= link_to "View", user_path(user), class: "text-purple-400 hover:text-purple-300 mr-2" %>
            <%= link_to "Edit", edit_user_path(user), class: "text-purple-400 hover:text-purple-300 mr-2" %>
            <% if current_user.admin? && current_user != user %>
              <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "text-red-400 hover:text-red-300" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
